# Aulin's Style Conky

# set to yes if you want Conky to be forked in the background
#background no
# Use Xft?
use_xft yes

# Xft font pool
#xftfont Bitstream Vera Sans Mono:size=8
#xftfont Ericsson GA628:style=Regular:size=12
#xftfont Anonymous Pro:style=Regular:size=10
xftfont monofur:style=Regular:size=12
#xftfont Liberation mono:style=Regular:size=12
#### Icons Fonts
#Heydings Icons:style=Regular
#Heydings Controls:style=Regular
#OpenLogos:style=Regular
#Illustrate IT:style=Regular

# Color List
# lightgrey
# Tan1
# Ivory
# DimGray
# DarkSlateGray

# Text alpha when using Xft
xftalpha 0.1

# Print everything to stdout?
out_to_console no

# MPD host/port
# mpd_host localhost
# mpd_port 6600
# mpd_password vista_killer

# Print everything to console?
out_to_console no

# mail spool
#mail_spool $MAIL

# Update interval in seconds
update_interval 3

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Create own window instead of using desktop (required in nautilus)
own_window yes
own_window_class conky
# If own_window is yes, you may use type normal, desktop or override
own_window_type override
#own_window_argb_visual yes

# Use pseudo transparency with own_window?
own_window_transparent yes

# If own_window_transparent is set to no, you can set the background colour here
#own_window_colour grey

# If own_window is yes, these window manager hints may be used
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 280 5
maximum_width 348

# Draw shades?
draw_shades no

# Draw outlines?
draw_outline no

# Draw borders around text
draw_borders no

# Draw borders around graphs
draw_graph_borders no

# Stippled borders?
stippled_borders 1

# border margins
#border_margin 4

# border width
border_width 1

# Default colors and also border colors
default_color lightgrey
default_shade_color grey
default_outline_color grey

# Text alignment, other possible values are commented
#alignment top_left
alignment top_right
#alignment bottom_left
#alignment bottom_right
#alignment none

# Gap between borders of screen and text
# same thing as passing -x at command line
gap_x 20
gap_y 120

# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# number of net samples to average
# set to 1 to disable averaging
net_avg_samples 2

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale no


# Add spaces to keep things from moving about?  This only affects certain objects.
use_spacer no

#   mldonkey_hostname     Hostname for mldonkey stuff, defaults to localhost
#   mldonkey_port         Mldonkey port, 4001 default
#   mldonkey_login        Mldonkey login, default none
#   mldonkey_password     Mldonkey password, default none

# boinc (seti) dir
# seti_dir /dir

# Allow for the creation of at least this number of port monitors (if 0 or not set, default is 16)
#min_port_monitors 16

# Allow each port monitor to track at least this many connections (if 0 or not set, default is 256)
#min_port_monitor_connections 256

# none, xmms, bmp, audacious, infopipe (default is none)
#xmms_player none
#short_units no
#lua_load ~/.conky/lua/clock.lua
#lua_draw_hook_pre clock_rings
# stuff after 'TEXT' will be formatted on screen

TEXT
#### Title #####################
${font openlogos:size=25}B  ${voffset -8}${font monofur:bold:size=13} $sysname $kernel${font aulinsymbols:style=Regular:size=16} A
${color DarkSlateGray}${hr 4}${color light gray}
#### Clock #####################
${color lightSlateGray} ${font Ericsson GA628:style=Regular
:size=32}$alignc${time %H:%M}
${voffset -30}${font Envy Code R:style=Regular:size=10}$alignc${time %A %d %b. %Y}
#### System ##############################
# ${battery_percent BAT1}
${voffset 5}${font monofur:bold:size=12}${color light gray}System ${font aulinsymbols:style=Regular:size=14}U${font monofur:bold:size=10} ${color DarkSlateGray}${hr 2}${color light gray}
${voffset 4}${font Heydings Icons:style=Regular:size=16}T${voffset -3}${font monofur:size=12} ${uptime}
${font Heydings Icons:style=Regular:size=16}l${voffset -3}${font monofur:size=12} CPU: ${cpu cpu1}% ${voffset -35} $alignr${cpugraph 40,170 000000 0088CC}
${voffset -2}${font Heydings Icons:style=Regular:size=16}4${voffset -4}${font monofur:size=12} CPU temp: ${execi 60 sensors -u | grep temp2_input | awk -F: '{print $2}' | awk -F. '{print $1}'} °C ${font Heydings Icons:style=Regular:size=16}${color firebrick3}${voffset -5}${execi 60 sudo sh ~/.bin/Hightemp.sh}${font monofur:size=12}${color light gray}
${font Heydings Icons:style=Regular:size=16}r${voffset -4}${font monofur:size=12} Energy Cell: ${battery_percent BAT1}%
${alignr}${voffset -16}${battery_bar 10,80 BAT1 }${voffset -2} ${font aulinsymbols:style=Regular:size=14}${execi 60 zsh ~/.bin/BatteryInfo.sh}${font monofur:bold:size=1} .
#### Resources ###########################
${font monofur:bold:size=12}${color light gray}Resources ${font aulinsymbols:style=Regular:size=12}W${font monofur:bold:size=10} ${color DarkSlateGray}${hr 2}${color light gray}
${font Heydings Controls:style=Regular:size=16}q${voffset -4}${font monofur:size=12}${font monofur:size=12} RAM: $mem [$memperc%]$alignr${voffset 4}${membar 8,100}
${voffset -14}${font monofur:size=2} ${font aulinsymbols:style=Regular:size=16}Y${font monofur:size=12} SSD: $alignc ${fs_used /home}/${fs_size /home} $alignr ${fs_free_perc /home}% free

#### Process #############################
${font monofur:bold:size=12}${color light gray}Top Processes ${color DarkSlateGray}${hr 2}
$alignc${font monofur:bold:size=12}${color light gray}CPU time
${color white}$font${top name 1}${alignr}${top cpu 1} %
$font${top name 2}${alignr}${top cpu 2} %
$font${top name 3}${alignr}${top cpu 3} %
$alignc${font monofur:bold:size=12}${color light gray}Memory Hoarders
${color white}$font${top_mem name 1}${alignr}${top_mem mem 1} %
$font${top_mem name 2}${alignr}${top_mem mem 2} %
$font${top_mem name 3}${alignr}${top_mem mem 3} %
${color DarkSlateGray}${hr 2}
